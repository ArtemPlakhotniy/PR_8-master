<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3">

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:orientation="vertical">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2">

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/question_vertical"/>
    <TextView
    android:id="@+id/txt_question"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:text="question"
    android:textColor="@android:color/white"/>
    </RelativeLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/btn_answer_a"
    android:src="@drawable/answer_a"/>
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:id="@+id/back_1_v"
    android:src="@drawable/board_on_main_activity_back_orange"
    android:visibility="invisible"/>
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:id="@+id/back_1_true"
    android:src="@drawable/answer_a_true"
    android:visibility="invisible"/>
    <TextView
    android:id="@+id/txt_answer_a"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="null"
    android:textColor="@android:color/white"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/btn_answer_b"
    android:src="@drawable/answer_b"/>
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:id="@+id/back_2_v"
    android:src="@drawable/board_on_main_activity_back_orange"
    android:visibility="invisible"/>
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:id="@+id/back_2_true"
    android:src="@drawable/answer_b_true"
    android:visibility="invisible"/>
    <TextView
    android:id="@+id/txt_answer_b"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="null"
    android:textColor="@android:color/white"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/btn_answer_c"
    android:src="@drawable/answer_c"/>
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:id="@+id/back_3_v"
    android:src="@drawable/board_on_main_activity_back_orange"
    android:visibility="invisible"/>
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:id="@+id/back_3_true"
    android:src="@drawable/answer_c_true"
    android:visibility="invisible"/>
    <TextView
    android:id="@+id/txt_answer_c"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="null"
    android:textColor="@android:color/white"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/btn_answer_d"
    android:src="@drawable/answer_d"/>
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:id="@+id/back_4_v"
    android:src="@drawable/board_on_main_activity_back_orange"
    android:visibility="invisible"/>
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:id="@+id/back_4_true"
    android:src="@drawable/answer_d_true"
    android:visibility="invisible"/>
    <TextView
    android:id="@+id/txt_answer_d"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="null"
    android:textColor="@android:color/white"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>